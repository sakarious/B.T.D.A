<%- include('partials/header.ejs') %>
<main id="main">
  <section id="features" class="features">
    <div class="container">
      <div class="section-title" style="margin-top: 20px !important">
        <h2>Registration Page</h2>
        <form action="/registerUser" method="post">
          <div class="mb-3">
            <label for="exampleFormControlTextarea1" class="form-label">
              <h4>Firstname</h4></label
            >
            <input
              type="text"
              class="form-control"
              name="firstname"
              id="exampleFormControlTextarea1"
              required
            />
          </div>
          <div class="mb-3">
            <label for="exampleFormControlTextarea1" class="form-label">
              <h4>Lastname</h4></label
            >
            <input
              type="text"
              class="form-control"
              name="lastname"
              id="exampleFormControlTextarea1"
              required
            />
          </div>
          <div class="mb-3">
            <label for="exampleFormControlTextarea1" class="form-label">
              <h4>Username</h4></label
            >
            <input
              type="text"
              class="form-control"
              name="username"
              id="exampleFormControlTextarea1"
              required
            />
          </div>
          <div class="mb-3">
            <label for="exampleFormControlTextarea1" class="form-label">
              <h4>Email</h4></label
            >
            <input
              type="text"
              class="form-control"
              name="email"
              id="exampleFormControlTextarea1"
              required
            />
          </div>
          <div class="mb-3">
            <label for="exampleFormControlTextarea1" class="form-label">
              <h4>Password</h4></label
            >
            <input
              type="password"
              class="form-control"
              name="password"
              id="exampleFormControlTextarea1"
              required
            />
          </div>
          <button type="submit" class="btn btn-primary">Register</button>
        </form>
      </div>
    </div>
  </section>
</main>
<%- include('partials/footer.ejs') %>
